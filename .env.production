# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local and configure for production

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_DB=trustauto

# JWT Authentication
JWT_SECRET=CHANGE_THIS_MINIMUM_32_CHARACTERS_SECRET_KEY
JWT_EXPIRES_IN=7d

# Server Configuration
BACKEND_PORT=5000
FRONTEND_PORT=3000
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# Cloudinary - Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Email (optional for inquiry notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ========================================
# FEATURE FLAGS (Configuration-Driven)
# ========================================
# All features can be toggled ON/OFF without code changes
# Default: true = enabled, false = disabled

# Logging & Audit Features
FEATURE_LOGGING_ENABLED=true
FEATURE_SESSION_LOGGING_ENABLED=true
FEATURE_AUDIT_LOGGING_ENABLED=true
FEATURE_LOG_USER_AGENT=true
FEATURE_LOG_IP_ADDRESS=true
FEATURE_LOG_SESSION_DURATION=true

# Admin Log Interface
FEATURE_ADMIN_LOGS_UI_ENABLED=true

# Audit Log Details
FEATURE_AUDIT_BEFORE_STATE=true
FEATURE_AUDIT_AFTER_STATE=true
FEATURE_AUDIT_CHANGES=true

# Session Events
FEATURE_LOG_LOGIN_SUCCESS=true
FEATURE_LOG_LOGIN_FAILED=true
FEATURE_LOG_LOGOUT=true
FEATURE_LOG_SESSION_EXPIRED=true

# Vehicle Audit Events
FEATURE_LOG_VEHICLE_CREATED=true
FEATURE_LOG_VEHICLE_UPDATED=true
FEATURE_LOG_VEHICLE_DELETED=true
FEATURE_LOG_VEHICLE_PUBLISHED=true
FEATURE_LOG_VEHICLE_UNPUBLISHED=true
