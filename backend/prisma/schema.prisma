generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  password  String
  name      String?
  role      Role        @default(ADMIN)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  inquiries Inquiry[]
  auditLogs AuditLog[]
  sessionLogs SessionLog[]
}

model AuditLog {
  id           String   @id @default(uuid())
  action       String
  entityType   String
  entityId     String?
  changes      String?
  beforeState  String?  @db.Text
  afterState   String?  @db.Text
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  vehicleId    String?
  vehicle      Vehicle? @relation(fields: [vehicleId], references: [id])
  inquiryId    String?
  inquiry      Inquiry? @relation(fields: [inquiryId], references: [id])
  ipAddress    String?
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([entityType])
  @@index([createdAt])
}

model Vehicle {
  id              String    @id @default(uuid())
  slug            String?   @unique @db.VarChar(255)
  make            String
  model           String
  year            Int
  priceKES        Int
  mileage         Int
  bodyType        BodyType
  fuelType        FuelType
  transmission    String
  drivetrain      String
  exteriorColor   String
  interiorColor   String
  engine          String
  vin             String    @unique
  location        String?
  status          Status    @default(USED)
  featured        Boolean   @default(false)
  description     String
  imageUrl        String
  images          String[]
  imagePublicIds  String[]
  viewCount       Int       @default(0)
  isDraft         Boolean   @default(false)
  scheduledAt     DateTime?
  publishedAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  inquiries       Inquiry[]
  auditLogs       AuditLog[]

  @@index([slug])
  @@index([vin])
  @@index([status])
  @@index([featured])
  @@index([isDraft])
  @@index([make, model])
  @@index([status, featured])
}

model Inquiry {
  id          String   @id @default(uuid())
  name        String
  email       String
  phone       String
  message     String
  vehicleId   String?
  vehicle     Vehicle? @relation(fields: [vehicleId], references: [id])
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())
  auditLogs   AuditLog[]
}

model SessionLog {
  id              String    @id @default(uuid())
  eventType       String
  userId          String?
  username        String?
  role            String?
  ipAddress       String?
  userAgent       String?    @db.Text
  sessionStart    DateTime?
  sessionEnd      DateTime?
  sessionDuration Int?
  createdAt       DateTime  @default(now())
  user            User?     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
}

enum Role {
  ADMIN
  STAFF
}

enum BodyType {
  SEDAN
  SUV
  TRUCK
  COUPE
  HATCHBACK
  WAGON
}

enum FuelType {
  GASOLINE
  DIESEL
  HYBRID
  ELECTRIC
}

enum Status {
  NEW
  USED
  CERTIFIED_PRE_OWNED
  ON_SALE
}
